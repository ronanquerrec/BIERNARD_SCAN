<div class="container pb-5">
  <h2 class="reco-title">Ma cave</h2>
  <p class="reco-description">La cave contient les bières que tu as scannées et appréciées</p>
  <div class="row justify-content-center">
    <div class="beer-grid">
      <% @beers.each do |beer| %>
        <div class="row">
            <div class="beer-card pt-2">
              <%= link_to beer_path(beer) do %>
                <%= image_tag beer.url_image %>
                <h5><%= beer.name %></h5>
                <p><%= beer.brewery %></p>
              <% end %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
